<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "ABI WMS", root_path, id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
        class="nav navbar-nav navbar-right collapse navbar-collapse">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" id="maintain" class="dropdown-toggle">
              Maintenance<b class="caret"></b>
            </a>
            <ul id="dropdown-menu1" class="dropdown-menu">
              <li><%= link_to "Countries", countries_url %></li>
              <li><%= link_to "Warehouse Divisions", warehouse_divisions_url %></li>
            </ul>
          </li>
          <li><%= link_to "Applications", applications_path %></li>
        <% end %>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu2" class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>