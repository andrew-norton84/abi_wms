<%= form_with(model: supplier) do |f| %>
  <h1><%= yield(:title) %></h1>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :supplier %>
  <%= f.text_field :supplier, class: 'form-control' %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :country %>
  <%= f.collection_select :country_id, Country.all, :id, :name, prompt: true, class: 'form-control' %>

  <% yield(:button_text).empty? ? ep = edit_supplier_path(supplier) : ep = "" %>
  <%= render 'shared/buttons', f: f, url: suppliers_url, model: supplier, edit_path: ep %>
<% end %>