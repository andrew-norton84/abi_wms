<%= form_with(model: stock_type) do |f| %>
  <h1><%= yield(:title) %></h1>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :stock_type %>
  <%= f.text_field:stock_type, class: 'form-control' %>

  <%= f.label :short_desc %>
  <%= f.text_field :short_desc, class: 'form-control' %>

  <%= f.label :description%>
  <%= f.text_field :description, class: 'form-control' %>

  <% yield(:button_text).empty? ? ep = edit_stock_type_path(stock_type) : ep = "" %>
  <%= render 'shared/buttons', f: f, url: stock_types_url, model: stock_type, edit_path: ep %>

<% end %>