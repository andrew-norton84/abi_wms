<%= form_with(model: customer) do |f| %>
  <h1><%= yield(:title) %></h1>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :customer %>
  <%= f.text_field :customer, class: 'form-control' %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :country %>
  <%= f.collection_select :country_id, Country.all, :id, :name, prompt: true, class: 'form-control' %>

  <% yield(:button_text).empty? ? ep = edit_customer_path(customer) : ep = "" %>
  <%= render 'shared/buttons', f: f, url: customers_url, model: customer, edit_path: ep %>
<% end %>